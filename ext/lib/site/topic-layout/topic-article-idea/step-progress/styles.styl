.bullets
    display flex
    justify-content space-between
    width 80%
    // margin 0 auto 1.6rem

.bullet-div
    width: 25%
    margin:  0px

.bullet-wrapper
    display flex
    flex-direction row
    align-items center
    &#preparacion, &#compra, &#ejecucion
        &::after
            content ''
            width 100%
            height 2px
            background-color #a7a7a7
    &#preparacion.active::after
        background-color #000000
    &#compra.active::after
        background-color #000000
    &#ejecucion.active::after
        background-color #000000
    .bullet
    &.active
        .bullet
            color white
            background-color #000000
            border-color #000000
        // estas son las lineas que unen los bullets
        &:nth-child(n
            & + 2)
                flex-grow 1
            & + 2)::after
                content ''
                width 100%
                height 2px
                background-color #000000
    &.inProgress
            .bullet
                color white
                background-color #a7a7a7
                border-color #000000
            &:nth-child(n
                & + 2)
                    flex-grow 1
                & + 2)::after
                    content ''
                    width 100%
                    height 2px
                    background-color #A7A7A7
    &.inFinalProgress
            .bullet
                color white
                background-color #a7a7a7
                border-color #000000
            &:nth-child(n
                & + 2)
                    flex-grow 1
                & + 2)::after
                    content ''
                    width 0%
                    height 2px
                    background-color #a7a7a7


